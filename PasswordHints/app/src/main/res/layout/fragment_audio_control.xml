<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.alisharabiani.com.passwordhints.fragments.AudioControlFragment">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">


        <Button android:id="@+id/recordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Record"
        />
        <Button android:id="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recordButton"
                android:text="Play"
        />
        <Button android:id="@+id/removeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/playButton"
                android:text="Remove Audio"
                />

    </RelativeLayout>
</FrameLayout>
